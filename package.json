{
    "name": "new-website",
    "version": "0.0.1",
    "description": "My website on ReactJs with NextJs",
    "author": {
        "name": "Leonchik Roman",
        "email": "roman.leon4ik@yandex.ru"
    },
    "private": true,
    "scripts": {
        "dev": "next dev",
        "export": "next export",
        "build": "next build",
        "start": "next start",
        "test": "jest"
    },
    "dependencies": {
        "@types/swiper": "^6.0.0",
        "next": "12.0.10",
        "next-i18next": "^10.2.0",
        "react": "17.0.2",
        "react-cookie": "^4.1.1",
        "react-dom": "17.0.2",
        "styled-components": "^5.3.3",
        "styled-normalize": "^8.0.7",
        "swiper": "^8.0.6"
    },
    "devDependencies": {
        "@babel/core": "^7.18.2",
        "@babel/preset-env": "^7.18.2",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^12.1.5",
        "@types/jest": "^27.5.1",
        "@types/node": "17.0.15",
        "@types/react": "17.0.39",
        "@types/styled-components": "^5.1.22",
        "babel-jest": "^28.1.0",
        "babel-plugin-styled-components": "^2.0.6",
        "eslint": "8.8.0",
        "eslint-config-next": "12.0.10",
        "jest": "^28.1.0",
        "jest-environment-jsdom": "^28.1.0",
        "ts-jest": "^28.0.3",
        "typescript": "4.5.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts",
            "tsx"
        ],
        "verbose": true,
        "rootDir": "./",
        "modulePaths": [
            "<rootDir>"
        ],
        "testRegex": ".*\\.spec\\.tsx?$",
        "transform": {
            "^.+\\.(js|jsx|ts|tsx)$": [
                "babel-jest",
                {
                    "presets": [
                        "next/babel"
                    ]
                }
            ]
        },
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom/extend-expect"
        ],
        "collectCoverageFrom": [
            "**/*.(t|j)sx?$"
        ],
        "coverageDirectory": "../coverage",
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        }
    }
}
